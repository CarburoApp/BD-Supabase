###############################################################################
# =========================== CONFIGURACIÓN GENERAL ===========================
###############################################################################

# Puerto interno de Postgres dentro del contenedor
POSTGRES_PORT=5432
# Nombre de la base de datos principal
POSTGRES_DB=postgres
# Usuario administrador principal de Postgres
POSTGRES_USER=postgres
# Contraseña del usuario postgres
# Elige una fuerte
POSTGRES_PASSWORD=postgres_password_segura
# Puerto externo para conexiones
# Clientes (Android, backend, etc.) conectan aquí
POSTGRES_PORT_EXT=5432

###############################################################################
# =============================== JWT / SEGURIDAD =============================
###############################################################################

# Secreto JWT principal de Supabase
# Usado por Auth, Storage, Supavisor, Studio
# Genera con: openssl rand -hex 32
JWT_SECRET=jwt_super_secreto_muy_largo
# Tiempo de expiración del JWT (en segundos)
JWT_EXPIRY=3600

###############################################################################
# ========================== SUPABASE KEYS (CRÍTICO) ===========================
###############################################################################

# Clave pública (anon)
# Se usa en frontend / clientes
# Se genera a partir del JWT_SECRET
ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.ANON...
# Clave de servicio (service_role)
# Tiene permisos administrativos
# NO exponer al frontend
SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.SERVICE...

###############################################################################
# =============================== SUPABASE URL ================================
###############################################################################

# URL pública de Supabase (para Studio y OAuth)
# En local normalmente:
SUPABASE_PUBLIC_URL=http://localhost:3000
# URL externa de la API (Auth la usa en emails y OAuth)
API_EXTERNAL_URL=http://localhost:9999
# URL base del sitio (para OAuth callbacks)
SITE_URL=http://localhost:3000
# URLs adicionales permitidas para redirect OAuth (separadas por coma)
ADDITIONAL_REDIRECT_URLS=http://localhost:3000


###############################################################################
# =============================== SUPABASE STUDIO ==============================
###############################################################################

# Nombre por defecto de la organización en Studio
STUDIO_DEFAULT_ORGANIZATION=MiOrganizacion
# Nombre por defecto del proyecto en Studio
STUDIO_DEFAULT_PROJECT=MiProyecto
# Puerto por el que se muestra el Studio
STUDIO_PORT=5423

###############################################################################
# =============================== POSTGRES META ===============================
###############################################################################

# Clave de cifrado usada por postgres-meta
# Genera con: openssl rand -base64 24
PG_META_CRYPTO_KEY=meta_crypto_key_super_secreta

###############################################################################
# =============================== AUTH / GOTRUE ===============================
###############################################################################

# Google OAuth
# Desde Google Cloud Console
GOOGLE_CLIENT_ID=tu_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_google_client_secret

###############################################################################
# =============================== SMTP / EMAIL ================================
###############################################################################

# Email remitente (administrador)
SMTP_ADMIN_EMAIL=no-reply@tudominio.com
# Host SMTP (ej: Gmail, Mailgun, Sendgrid, etc.)
SMTP_HOST=smtp.tudominio.com
# Puerto SMTP (587 típico)
SMTP_PORT=587
# Usuario SMTP
SMTP_USER=usuario_smtp
# Contraseña SMTP
SMTP_PASS=contraseña_smtp
# Nombre visible del remitente
SMTP_SENDER_NAME=Supabase Local

###############################################################################
# =============================== STORAGE =====================================
###############################################################################

# No requiere variables adicionales fuera de las ya definidas
# Usa ANON_KEY, SERVICE_ROLE_KEY y POSTGRES_*


###############################################################################
# =============================== ANALYTICS (LOGFLARE) =========================
###############################################################################

# Token público de Logflare (puede ser cualquier string si no expones UI)
# openssl rand -base64 24
LOGFLARE_PUBLIC_ACCESS_TOKEN=logflare_public_token
# Token privado de Logflare (administración)
# openssl rand -base64 24
LOGFLARE_PRIVATE_ACCESS_TOKEN=logflare_private_token

###############################################################################
# =============================== SUPAVISOR (POOLER) ===========================
###############################################################################

# ID del tenant del pooler
# Puede ser cualquier string único
POOLER_TENANT_ID=local-tenant
# Tamaño por defecto del pool de conexiones
POOLER_DEFAULT_POOL_SIZE=20
# Máximo de clientes simultáneos permitidos
POOLER_MAX_CLIENT_CONN=100
# Tamaño del pool interno hacia Postgres
POOLER_DB_POOL_SIZE=10
# Puerto externo para conexiones en modo transaction
# Clientes (Android, backend, etc.) conectan aquí
POOLER_PROXY_PORT_TRANSACTION=6543

###############################################################################
# =============================== OPENAI (OPCIONAL) ============================
###############################################################################

# Solo si usas features de IA en Studio
OPENAI_API_KEY=